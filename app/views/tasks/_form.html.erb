<%= form_for(@task) do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
    <%= f.label :details %><br/>
    <%= f.text_area :details, cols: 40, rows: 7 %>
    <%= f.label :priority %><br/>
    <%= f.select :priority, Task::PRIORITY_TYPES, prompt: "Pick one" %>
    <%= f.label :status %><br/>
    <%= f.select :status, Task::STATUS_TYPES, prompt: "Pick one" %>
  </p>
    <%= f.submit %> |
	<%= link_to "Cancel", @task %>
  </p>
<% end %>